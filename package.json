{
  "name": "sage",
  "version": "0.0.1",
  "private": true,
  "description": "Sage.ai - AI Investment Mentor Platform",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:backend": "pnpm --filter @sage/backend dev",
    "dev:frontend": "pnpm --filter @sage/frontend dev",
    "build": "pnpm -r build",
    "build:backend": "pnpm --filter @sage/backend build",
    "build:frontend": "pnpm --filter @sage/frontend build",
    "test": "pnpm -r test",
    "test:backend": "pnpm --filter @sage/backend test",
    "test:frontend": "pnpm --filter @sage/frontend test",
    "lint": "pnpm -r lint"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.1"
}
